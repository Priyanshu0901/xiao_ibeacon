menu "BME280 Configuration"

    config BME280_I2C_ADDR
        hex "BME280 I2C Address"
        default 0x76
        help
            I2C address of the BME280 sensor. Default is 0x76.
            Use 0x77 if SDO pin is pulled high.

    choice BME280_INTERFACE
        prompt "BME280 Interface"
        default BME280_USE_I2C
        help
            Select the interface to use with BME280 sensor.

        config BME280_USE_I2C
            bool "I2C Interface"
        
        config BME280_USE_SPI
            bool "SPI Interface"
    endchoice

    if BME280_USE_I2C
        config BME280_I2C_PORT
            int "I2C Port Number"
            range 0 1
            default 0
            help
                I2C port number for BME280.

        config BME280_I2C_SDA_PIN
            int "I2C SDA GPIO"
            range 0 48
            default 21
            help
                GPIO pin for I2C SDA.

        config BME280_I2C_SCL_PIN
            int "I2C SCL GPIO"
            range 0 48
            default 22
            help
                GPIO pin for I2C SCL.

        config BME280_I2C_CLOCK_SPEED
            int "I2C Clock Frequency (Hz)"
            range 100000 400000
            default 100000
            help
                I2C clock frequency for BME280. Standard mode (100 KHz) or Fast mode (400 KHz).
    endif

    if BME280_USE_SPI
        config BME280_SPI_HOST
            int "SPI Host"
            range 0 2
            default 1
            help
                SPI host to use for BME280. 
                HSPI = 1, VSPI = 2

        config BME280_SPI_MOSI_PIN
            int "SPI MOSI GPIO"
            range 0 48
            default 23
            help
                GPIO pin for SPI MOSI.

        config BME280_SPI_MISO_PIN
            int "SPI MISO GPIO"
            range 0 48
            default 19
            help
                GPIO pin for SPI MISO.

        config BME280_SPI_SCLK_PIN
            int "SPI SCLK GPIO"
            range 0 48
            default 18
            help
                GPIO pin for SPI SCLK.

        config BME280_SPI_CS_PIN
            int "SPI CS GPIO"
            range 0 48
            default 5
            help
                GPIO pin for SPI CS.

        config BME280_SPI_CLOCK_SPEED
            int "SPI Clock Frequency (Hz)"
            range 100000 10000000
            default 5000000
            help
                SPI clock frequency for BME280. Default is 5 MHz.
    endif

endmenu